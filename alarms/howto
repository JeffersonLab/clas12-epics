##Do not edit alarmsettings.ini or alarm.setup except to change the Annunciator topic to "name1"_TALK

##Configure Alarm

$ALARM_CONFIG -root "name1" -import -file "name2".xml -pluginCustomization alarmsettings.ini

##where name1 should be the same as <config name=".."> (line 4) in name2.xml
##and ideally name1 should be the same as name2 for less confusion 

##Start Alarm Server
$ALARM_EXE -root "name1" -pluginCustomization alarmsettings.ini

##where name1 is as above in configuration

##Running CSS Version
/usr/clas12/epics/css-clas12-4.1.1-full/org.csstudio.clas12/repository/target/products/org.csstudio.sns.product.product/linux/gtk/x86_64/sns-css-4.1.1/css -nosplash -data ~/CSS-Workspaces/Default -share_link ~clasioc/CSS-Workspaces/.shared/

##Dump config
$ALARM_CONFIG -root HallB -export -file test.xml -pluginCustomization alarmsettings.ini

##Delete some part
$ALARM_CONFIG -root HallB -delete /HallB/B_HV/ECAL/SEC1/UI/B_HV_ECAL_SEC1_UI_E99.STAT -pluginCustomization alarmsettings.ini

#import new part
$ALARM_CONFIG -root HallB -modify -file HallB_extra.xml -pluginCustomization alarmsettings.ini

#delete a complete alarm tree
$ALARM_CONFIG -root demo -delete /demo


