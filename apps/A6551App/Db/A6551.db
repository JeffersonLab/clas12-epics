    field (INP,  "@A6551.proto getVoltageSetpoint $(PORT)")
    field (PINI, 1)
}
record (bi, "$(P):ocsetrbk")
{
    field (DESC, "Get OC ON/OFF Status")
    field (DTYP, "stream")
    field (INP,  "@A6551.proto getOcOnOff $(PORT)")
    field (PINI, 1)
}
