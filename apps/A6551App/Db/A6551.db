record (calc, "$(P):comms")
{
    field (SCAN,"1 second")
    field (INPA,"$(P):imon.STAT")
    field (INPB,"$(P):vmon.STAT")
    field (INPC,"$(P):ocstat.STAT")
    field (INPD,"$(P):pwrbk.STAT")
    # 10 is timeout:
    field (CALC,"(A=10 || B=10 || C=10 || D=10)")
}

