#asyn is useful for debugging the communication
record(asyn,"B_DET_DC_LV_SEC$(S)_SL$(L):ASYN")
{
    field(DTYP,"asynRecordDevice")
    field(PORT,"$(PORT)")
    field(ADDR,"$(ADDR)")
    field(OMAX,"$(OMAX)")
    field(IMAX,"$(IMAX)")
}

record (ai, "B_DET_DC_LV_SEC$(S)_SL$(L):vmon")
{
    field (DESC, "Get Voltage")
    field (DTYP, "stream")
    field (SCAN, "1 second")
    field (INP,  "@A6551.proto getVoltage $(PORT)")
}

record (ao, "B_DET_DC_LV_SEC$(S)_SL$(L):vset")
{
    field (DESC, "Set voltage")
    field (DTYP, "stream")
    field (OUT,  "@A6551.proto setVoltage $(PORT)")
}

