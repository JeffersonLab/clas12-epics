#asyn is useful for debugging the communication
record(asyn,"$(P):ASYN")
{
    field(DTYP,"asynRecordDevice")
    field(PORT,"$(PORT)")
    field(ADDR,"$(ADDR)")
    field(OMAX,"$(OMAX)")
    field(IMAX,"$(IMAX)")
}

record (ai, "$(P):v1mon")
{
    field (DESC, "Get voltage #1")
    field (DTYP, "stream")
    field (SCAN, "5 second")
    field (PREC, 2)
    field (INP,  "@A6621.proto getVoltage1 $(PORT)")
}
record (ao, "$(P):v1set")
{
    field (DESC, "Set voltage #1")
    field (DTYP, "stream")
    field (OUT,  "@A6621.proto setVoltage1 $(PORT)")
}
