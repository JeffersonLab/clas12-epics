#
# Example:
# dbLoadRecords("$(TOP)/db/bom_scaler.db", "SCLR=bom_sc, FIFO=16, CHAN=0, INP=@asyn(SIS38XX_1 0)")
#

record(mca,"$(SCLR)_$(CHAN)") { 
   field(DTYP, "asynMCA") 
   field(INP,  "$(INP)")
   field(MODE, "MCS")
   field(NMAX, "$(FIFO)")
   field(NUSE, "$(FIFO)")
   field(DWEL, "1.0")
   field(PREC, "0")
   field(FLNK, "$(SCLR)_ai_$(CHAN)")
} 

#
#  Sub records to keep the summed and normalized values 
#    for BOM SCLRs
# 
record(sub,"$(SCLR)_ai_$(CHAN)") {
    field(SCAN, "Passive")   
    field(INAM, "bom_sum_init")
    field(SNAM, "bom_sum_proc") 
    field(INPA, "HLB:bta_main_cur")
    field(INPB, "bom_norm_flag")
    field(INPC, "$(SCLR)_$(CHAN)")
    field(INPD, "$(SCLR)_1.ELTM")
    field(PREC, "1" )
}

