	field(INPA,"scaler_calc1 NPP NMS")
	field(INPB,"IPM2C21A NPP NMS")
	field(INPC,"scaler_calc1 NPP NMS")
	field(INPD,"HL$(hall):bta_cur_stor NPP NMS")

	field(PREC,"4"  )
