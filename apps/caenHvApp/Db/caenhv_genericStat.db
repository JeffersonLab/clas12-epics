record(calcout,"$(P)")
{
    field(SCAN,"2 second")
    field(INPA,"$(P):isOn")
    field(INPB,"$(P):isOff")
    field(INPC,"$(P):isError")
    field(INPD,"$(P):isComm")
    field(CALC,"D=0 ? 4 : (C=1 ? 3 : (B=1 ? 0 : (A=1 ? 1 : 2) ) )")
    field(DOPT,"Use CALC")
    field(OOPT,"Every Time")
    field(OUT,"$(P):stat CPP")
    field(HIHI,"3")
    field(HIGH,"2")
    field(HHSV,"MAJOR")
    field(HSV,"MINOR")
}
record(mbbi,"$(P):stat")
{
    field(ZRST,"All Off")
    field(ONST,"All On")
    field(TWST,"Mixed On/Off")
    field(THST,"Alarm")
    field(FRST,"Comms Error")
    field(TWSV,"MINOR")
    field(THSV,"MAJOR")
    field(FRSV,"MAJOR")
}

