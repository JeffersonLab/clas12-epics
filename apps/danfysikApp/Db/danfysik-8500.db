record(bo, "$(P)$(R=)pol:set") {
    field(DTYP, "stream")
    field(OUT,  "@danfysik-8500.proto putString(PO) $(PORT)")
    field(ZNAM, "+")
    field(ONAM, "-")
    field(DESC, "Set Polarity")
}

record(bo, "$(P)$(R=)pol") {
    field(SCAN, "1 second")
