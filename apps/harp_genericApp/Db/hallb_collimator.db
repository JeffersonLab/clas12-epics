record(calc, "collimator_at_home") {
    field(SCAN, ".2 second")
    field(INPA, "collimator.RBV")
    field(INPB, "collimator:empty:val")
    field(CALC, "ABS(A-B)<0.1?1:0")
    field(DESC, "Home")
}
