dbLoadTemplate("db/caenhv_stat-CND.substitutions")
dbLoadRecords("db/caenhv_stat-CND.db")
dbLoadRecords("db/caenhv_genericStat.db","P=B_DET_CND_HV")

dbLoadRecords("$(DEVIOCSTATS)/db/iocAdminSoft.db","IOC=$(IOC)")
