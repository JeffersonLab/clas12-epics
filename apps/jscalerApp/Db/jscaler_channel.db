record(aao, "B_HW_$(CrName)_Sl$(Sl)_Ch$(Ch):thresh") {
    field(DTYP,"JLAB_SCALERS")
    field(DESC,"scaler threshold")
    field(OUT,"#C$(CScode) S$(Thresh)")
    field(NELM,"10")
    field(FTVL,"DOUBLE")
    field(SCAN,"Passive")
    alias("B_DET_$(Det)_$(Sys)_$(Element):thresh")
    info(autosaveFields_pass0,"DESC")
}
