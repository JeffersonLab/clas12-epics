record(waveform, "B_HW_$(CrName)_Sl$(Sl)_Ch$(Ch):scalers") {
    field(DTYP,"JLAB_SCALERS")
    field(DESC,"scaler waveform")
    field(INP,"#C$(CScode) S$(Counts)")
    field(NELM,"192")
    field(FTVL,"DOUBLE")
    field(SCAN,"5 second")
 #   field(FLNK,"B_HW_$(CrName)_Sl$(Sl)_Ch$(Ch):c")
    alias("B_DET_$(Det)_$(Sys)_$(Element):scalers")
}

