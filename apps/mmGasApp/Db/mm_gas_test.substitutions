    {P,             R,      PORT,   OFFSET, ZNAM,   ONAM}
    {B_DET_MM_GAS_, START,  MM502,  0,      "",     START}
    {B_DET_MM_GAS_, STOP,   MM502,  0,     "",     STOP}
}

file "$(MODBUS)/db/bi_bit.template" { pattern
    {P,             R,     PORT,          OFFSET,   ZNAM,   ONAM,  ZSV,       OSV,    SCAN}
    {B_DET_MM_GAS_, DIN02, MM502,         2,        Low,    High,  NO_ALARM,  MAJOR,  "I/O Intr"}
    {B_DET_MM_GAS_, DIN03, MM502,         3,        Low,    High,  NO_ALARM,  MAJOR,  "I/O Intr"}
    {B_DET_MM_GAS_, DIN04, MM502,         4,        Low,    High,  NO_ALARM,  MAJOR,  "I/O Intr"}
}

