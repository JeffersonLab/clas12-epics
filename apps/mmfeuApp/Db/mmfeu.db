#Basic configuration commands

record(asyn,"$(P):ASYN")
{
    field(DTYP,"asynRecordDevice")
    field(PORT,"$(PORT)")
    field(ADDR,"24")
    field(OMAX,"2000")
    field(IMAX,"2000")
}

record(stringout, "$(P):COMMAND") {
   field(DTYP, "stream")
   field(OUT, "@mmfeu.proto sendCommand($(P)) $(PORT)")
}

record(stringin, "$(P):RESPONSE") {
}
   
record(stringin, "$(P):NAME") {
   field(DTYP, "stream")
   field(PINI, "YES")
   field(INP, "@mmfeu.proto getName $(PORT)")
}

record(stringin, "$(P):ActiveCrateIDs") {
}
record(ai, "$(P):NActiveCrates") {
   field(DTYP, "stream")
   field(PINI, "YES")
   field(INP, "@mmfeu.proto getActiveCrates($(P)) $(PORT)")
   field(SCAN, "2 second")
   field(HIGH,"$(CR_HI)")
   field(LOW,"$(CR_LOW)")
   field(HSV,"MAJOR")
   field(LSV,"MAJOR")
}
