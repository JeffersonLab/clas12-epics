
# SECTOR STATUSES:
# 0 = all channels off
# 1 = all channels on
# 2 = mixed on/off, or any channel ramping, tripped, OVC, etc
# 3 = any channel has comms error

record(calc,"B_DET_ECAL_HV_SEC$(SEC)")
{
    field(INPA,"B_DET_ECAL_HV_SEC$(SEC):isOn CPP")
    field(INPB,"B_DET_ECAL_HV_SEC$(SEC):isOff CPP")
    field(INPC,"B_DET_ECAL_HV_SEC$(SEC):isComm CPP")
    field(CALC,"C=0 ? 3 : (B=1 ? 0 : (A=1 ? 1 : 2) )")
}

