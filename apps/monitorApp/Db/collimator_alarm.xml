<config name="HallB">
<component name="Beamline">
  <component name="Collimator">
    <pv name="B_COLLIMATOR_TAGGER:alarm">
      <description>Tagger Off with Blank Collimator</description>
      <latching>true</latching>
      <annunciating>true</annunciating>
      <delay>5</delay>
      <display>
        <title>Open Alarm Settings</title>
        <details>/CLAS12_Share/apps/harp_genericApp/collimator.opi</details>
      </display>
      <guidance>
        <title>Guidance</title>
        <details>The Hall-B Collimator should not be at the "Blank" position when the Tagger magnet is OFF.</details>
      </guidance>
    </pv>
   </component>
</component>
</config>
