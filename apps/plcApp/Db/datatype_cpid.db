record(stringout, "$(P)$(R)$(TAG):NAME") {
    field(DESC, "Name of controlled value")
    field(DTYP, "EtherIP")
    field(OUT,  "@$(PLCID) $(TAG).CValName S 1")
    field(SCAN, "Passive")
}

