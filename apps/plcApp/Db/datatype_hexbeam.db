#
# datatype_hexbeam.db - (PLC HB Record)
#
# Macros:
#   P     - record prefix
#   R     - record prefix
#   PLCID - PLC ID set in startup
#   HB    - PLC tag (ex. HB_US_S1)
# 
# Author: Wesley Moore (wmoore@jlab.org)
# Date:   Mar 2016
#

record(ai, "$(P)$(R)$(HB):Temp_1") {
    field(DTYP, "EtherIP")
    field(INP,  "@$(PLCID) $(HB).Temp[0]")
    field(SCAN, "1 second")
    field(EGU,  "K")
    field(PREC, "2")
}

record(ai, "$(P)$(R)$(HB):Temp_2") {
    field(DTYP, "EtherIP")
    field(INP,  "@$(PLCID) $(HB).Temp[1]")
    field(SCAN, "1 second")
    field(EGU,  "K")
    field(PREC, "2")
}

