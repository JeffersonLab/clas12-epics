#
# solenoid_cryocon.db - Solenoid CryoCon Modules
#
# Macros:
#   P     - record prefix
#   R     - record prefix
#   PLCID - PLC ID set in startup
#
# Author: Wesley Moore (wmoore@jlab.org)
# Date:   Feb 2017
#

record(ai, "$(P)$(R)CryoCon:WatchDog") {
    field(DESC, "CryoCon WatchDog")
    field(DTYP, "EtherIP")
    field(SCAN, "1 second")
    field(INP,  "@$(PLCID) Sol_CryoCon_Watchdog")
    field(EGU,  "")
    field(PREC, "0")
}

record(bi, "$(P)$(R)CryoCon1") {
    field(DESC, "CryoCon 1")
    field(DTYP, "EtherIP")
    field(SCAN, "1 second")
    field(INP,  "@$(PLCID) CryoCon1.Failed")
    field(OSV,  "MAJOR")
}

record(bi, "$(P)$(R)CryoCon2") {
    field(DESC, "CryoCon 2")
    field(DTYP, "EtherIP")
    field(SCAN, "1 second")
    field(INP,  "@$(PLCID) CryoCon2.Failed")
    field(OSV,  "MAJOR")
}

record(bi, "$(P)$(R)CryoCon3") {
    field(DESC, "CryoCon 3")
    field(DTYP, "EtherIP")
    field(SCAN, "1 second")
    field(INP,  "@$(PLCID) CryoCon3.Failed")
    field(OSV,  "MAJOR")
}

record(bo, "$(P)$(R)CryoCon:Reset") {
    field(DESC, "CryoCon Reset")
    field(DTYP, "EtherIP")
    field(OUT,  "@$(PLCID) Sol_CryoCon_Reset_PB S 1")
    field(HIGH, "1.0")
}


