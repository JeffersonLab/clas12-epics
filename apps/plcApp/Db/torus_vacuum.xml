<config name="HallB">
    <component name="TORUS">
        <component name="Vacuum">
            <!--
                UPPER VACUUM
            -->
            <pv name="B_TORUS:VAC:CG8103.STAT">
                <description>Torus upper vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:TC8103.STAT">
                <description>Torus upper vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <!--
                LOWER VACUUM
            -->
            <pv name="B_TORUS:VAC:CG8102.STAT">
                <description>Torus lower vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:TC8102.STAT">
                <description>Torus lower vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:PV8101.STAT">
                <description>Torus secondary gate valve</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <!-- 
                MAIN VACUUM
            -->
            <pv name="B_TORUS:VAC:CG8100.STAT">
                <description>Torus main vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:TC8100.STAT">
                <description>Torus main vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:CG8100TB.STAT">
                <description>Torus main vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:TC8104RP.STAT">
                <description>Torus main vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:TB8100.STAT">
                <description>Torus main vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:PV8100.STAT">
                <description>Torus main gate valve</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <!--
                ROOTS VACUUM
            -->
            <pv name="B_TORUS:VAC:TC8105.STAT">
                <description>Torus roots vacuum</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
            <pv name="B_TORUS:VAC:PV8105RB.STAT">
                <description>Torus roots gate valve</description>
                <latching>true</latching>
                <annunciating>true</annunciating>
            </pv>
        </component>    <!-- TORUS -->
    </component>        <!-- HallB -->
</config>
