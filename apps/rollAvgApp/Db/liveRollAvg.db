#
# Takes two records to make a rolling average (?).
# Because single compress with ALG=Average updates
# its average every N polls, so not really rolling.
#

record(compress,"$(P):circBuff") {
    field(INP,"$(I) CPP")
    field(ALG,"Circular Buffer")
    field(NSAM,"$(N)")
}

record(compress,"$(P)") {
    field(DESC,"$(DESC=)")
    field(INP,"$(P):circBuff CPP")
    field(ALG,"N to 1 Average")
    field(NSAM,"1")
    field(N,"$(N)")
    field(EGU,"$(EGU=)")
    info(autosaveFields_pass0,"VAL DESC")
}

