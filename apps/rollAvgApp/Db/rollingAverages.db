
record(ai,"$(P)$(R=):2h") {
    field(DESC,"$(DESC=Two-Hour Average)")
    field(HHSV,"NO_ALARM")
    field(HSV,"MAJOR")
    field(LSV,"MINOR")
    field(LLSV,"NO_ALARM")
    field(LOW,"$(LOW=0)")
    field(HIGH,"$(HIGH=0)")
    field(EGU,"$(EGU=)")
    info(autosaveFields_pass0,"VAL HIGH LOW")
}
