#asyn is useful for debugging the communication
record(asyn,"$(P):ASYN")
{
    field(DTYP,"asynRecordDevice")
    field(PORT,"$(PORT)")
    field(ADDR,"$(ADDR)")
    field(OMAX,"$(OMAX)")
    field(IMAX,"$(IMAX)")
}
record (ai, "$(P):vin")
{
    field (DESC, "Measured Voltage at Input Terminal")
    field (DTYP, "stream")
    field (SCAN, "2 second")
    field (INP,  "@sy2604.proto vin $(PORT)")
}
