#!/bin/bash
#
# DO NOT EDIT THIS FILE
# 
# This script is installed from /usr/clas12/hps/prod/tools/
#

if [ $# -eq 0 ]; then
	ADL_PATH=/usr/clas12/hps/prod/apps/medm
	APP_PATH=/usr/clas12/hps/prod/apps
else
	ADL_PATH=/usr/clas12/hps/${1}/apps/medm
	APP_PATH=/usr/clas12/hps/${1}/apps
fi

ADL_FILE=PRAD_EPICS.adl

export EPICS_DISPLAY_PATH=$ADL_PATH
export APP=$APP_PATH

if [ "$#" -gt 0 ]; then
    xterm -title "PRAD MEDM ${1}" -e medm -x -cmap -cleanup $ADL_FILE &
else
    medm -x -cmap -cleanup $ADL_FILE
fi

exit
